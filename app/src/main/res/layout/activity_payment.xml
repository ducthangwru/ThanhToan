<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ducthangwru.org.thanhtoan.activities.PaymentActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_avatar"
                android:text="Tên khách hàng"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money_before"
                android:layout_below="@id/tv_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_avatar"
                android:text="Số dư: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_money_payment"
                android:text="Số tiền thanh toán: "
                android:layout_below="@id/tv_money_before"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money_after"
                android:text="Còn dư: "
                android:layout_below="@id/tv_money_payment"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
